<h1>{{title}}</h1>

<ul>
  <li>
    <button id="door">Door</button>
  </li>
  <li>
    <button id="alarm">Alarm</button>
  </li>
  <li>
    <button id="fire">Fire</button>
  </li>
  <li>
    <input id="custom" type="text" placeholder="Custom..."></input>
    <button id="custom-send">Send</button>
  </li>
</ul>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
  var socket = io();
  $('#door').click(function(e) {
    socket.emit('magic', { name: 'Door' });
  });
  $('#alarm').click(function(e) {
    socket.emit('magic', { name: 'Alarm' });
  });
  $('#fire').click(function(e) {
    socket.emit('magic', { name: 'Fire' });
  });
  $('#custom-send').click(function(e) {
    socket.emit('magic', { name: $('#custom').val() });
  });
</script>
