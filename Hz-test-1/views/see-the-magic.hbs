<h1>{{title}}</h1>


<h2>Events</h2>
<ul id="eventList">

</ul>


<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
  var socket = io();

  // listen for an event called "magic"
  socket.on('magic', function(data) {
    console.log(data);
    var eventList = $('#eventList');

    // take the human readable "name" of the event
    // and display it in a list item
    eventList.append('<li>' + data.name + '</li>');
  });
</script>
